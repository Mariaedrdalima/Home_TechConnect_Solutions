generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DownHistory {
  id        String    @id @default(uuid())
  nome      String
  key       String
  hostId    String
  hostName  String
  date      DateTime
  notifications ImmediateFailureNotification[]

  @@map("DownHistory") // Nome da tabela no banco
}

model ImmediateFailureNotification {
  id             String   @id @default(uuid())
  downHistoryId  String
  read           Boolean
  downHistory    DownHistory @relation(fields: [downHistoryId], references: [id], onDelete: Cascade)

  @@map("ImmediateFailureNotification") // Nome da tabela no banco
}
